%p#notice= notice
%h1 Founding Sources
%table
  %thead
    %tr
      %th Account
      %th Name
      %th Balance
      %th{:colspan => "3"}
  %tbody
    - @founding_sources.each do |founding_source|
      %tr
        %td= founding_source.account
        %td= founding_source.name
        %td= founding_source.balance
        %td= link_to 'Show', founding_source
        %td= link_to 'Edit', edit_founding_source_path(founding_source)
        %td= link_to 'Destroy', founding_source, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Founding Source', new_founding_source_path
